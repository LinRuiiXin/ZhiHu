<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/aev_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_close_activity_white" />

        <TextView
            android:id="@+id/aev_get_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="选取视频"
            android:textColor="@color/ZhiHuBlue"
            />
    </RelativeLayout>

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/aev_video"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:id="@+id/aev_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="在此键入标题..."
            android:maxLines="3"
            android:textColor="#A6A6A6"
            android:textColorHint="#A6A6A6"
            android:maxLength="32"
            android:textSize="18dp"
            android:textCursorDrawable="@drawable/edit_video_cursor"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:id="@+id/aev_submit_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/submit_video_button_shape"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/aev_up"
            android:background="@drawable/icon_up"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_toRightOf="@+id/aev_up"
            android:layout_marginLeft="7dp"
            android:textColor="@color/ZhiHuBlue"
            android:text="发布"
            android:layout_marginTop="9dp"
            />
    </RelativeLayout>
</RelativeLayout>