<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_margin="0dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/lti_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:riv_oval="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lti_line1"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/lti_portrait"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/lti_reply_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jepper"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/icon_back_lv1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:rotation="180"
            />
        <TextView
            android:id="@+id/lti_reply_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="LinRuiXin"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/lti_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lti_line1"
        android:layout_alignLeft="@+id/lti_line1"
        android:layout_marginTop="12dp"
        android:text="面试作品得根据影评的岗位来写。中层及以下的岗位不用写战略发展。"
        android:textSize="12dp"
        android:textColor="#535353"
        />

    <LinearLayout
        android:id="@+id/lti_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lti_content"
        android:layout_alignLeft="@+id/lti_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/lti_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18-06-24"
            android:textColor="#B6B6B6"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lti_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/lti_support_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="1233"
            android:textColor="#B6B6B6"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/lti_support_btn"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/icon_support"
            android:padding="10dp" />

      <!--  <TextView
            android:id="@+id/lti_reply"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_comment_out" />-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/lti_line3"
        android:layout_marginTop="15dp" />
</RelativeLayout>