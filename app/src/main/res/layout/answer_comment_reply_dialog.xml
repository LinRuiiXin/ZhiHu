<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论给 "
            android:textColor="#BCBCBC"
            android:textSize="10dp"
            android:id="@+id/acrd_title"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acrd_user_reply_to"
            android:text="蓝为一"
            android:textSize="10dp"
            android:layout_gravity="center_vertical"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:id="@+id/acrd_bigger"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_bigger"
                />
        </RelativeLayout>

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/acrd_edit_text"
        android:background="@null"
        android:hint="友善的评论是交流的起点"
        android:textSize="12dp"
        android:gravity="top"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acrd_submit"
        android:layout_gravity="end"
        android:padding="5dp"
        android:gravity="center"
        android:text="发布"
        android:textColor="@color/ZhiHuBlue"
        />
</LinearLayout>