<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow"
    android:elevation="2dp"
    android:padding="5dp"
    android:layout_marginBottom="8dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer_has_image_title"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_margin="7dp"
        android:maxLines="2"
        android:textColor="#000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/answer_has_image_title"
        android:id="@+id/answer_has_image_line2"
        android:layout_margin="7dp"
        >
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/answer_has_image_portrait"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_has_image_username"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:maxLines="2"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_has_image_introduction"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"

                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer_has_image_content"
                android:maxLines="2"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            >

        </TextView>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:id="@+id/answer_has_image_image"
            android:background="@drawable/card_image_shape"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/answer_has_image_line2"
        android:layout_margin="7dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_has_image_support"
            android:layout_gravity="center_vertical"
            android:textColor="#9e9e9e"
            android:textSize="11dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Â· "
            android:textColor="#9e9e9e"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_has_image_comments"
            android:layout_gravity="center_vertical"
            android:textColor="#9e9e9e"
            android:textSize="11dp"
            />
    </LinearLayout>
</RelativeLayout>