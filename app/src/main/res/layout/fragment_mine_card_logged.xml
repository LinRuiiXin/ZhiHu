<?xml version="1.0" encoding="utf-8"?>
<!--nl：not login,il:is login-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/mine_card_shape"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/mine_card_il_info"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/mine_card_il_portrait"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mine_card_il_username"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:textColor="#fff"
            android:text="lsx"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/mine_card_il_personal_page"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="150dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="个人主页"
                android:textColor="#E6E6E6"
                android:textSize="12dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_right" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/mine_card_il_info"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mine_card_il_care_num"
                android:text="0"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mine_card_il_care_num"
                android:layout_centerHorizontal="true"
                android:text="关注"
                android:textColor="#fff"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mine_card_il_collect_num"
                android:text="0"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mine_card_il_collect_num"
                android:layout_centerHorizontal="true"
                android:text="收藏夹"
                android:textColor="#fff"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mine_card_il_history_num"
                android:text="0"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mine_card_il_history_num"
                android:layout_centerHorizontal="true"
                android:text="最近浏览"
                android:textColor="#fff"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>