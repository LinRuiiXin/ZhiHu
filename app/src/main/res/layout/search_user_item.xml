<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_ripple"
    android:padding="5dp"
    android:elevation="2dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    >
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        app:riv_oval="true"
        android:src="@drawable/default_portrait"
        android:id="@+id/sui_portrait"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sui_user_name"
        android:layout_toRightOf="@id/sui_portrait"
        android:layout_alignTop="@id/sui_portrait"
        android:layout_marginLeft="20dp"
        android:text="LinRuiXin"
        android:textColor="#000"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sui_profile"
        android:layout_below="@id/sui_user_name"
        android:layout_alignLeft="@id/sui_user_name"
        android:layout_marginTop="10dp"
        android:text="profile..."
        />
</RelativeLayout>