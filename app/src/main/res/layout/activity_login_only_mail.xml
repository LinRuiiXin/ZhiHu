<?xml version="1.0" encoding="utf-8"?>
<!--mp:mail and password;om:only mail-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:background="@drawable/mail_login_shape"
    android:paddingBottom="170dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_om_title"
        android:text="登录ZhiHu体验更多功能"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="23dp"
        android:layout_marginTop="35dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/login_om_mail"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:hint="输入邮箱"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:textColorHint="#BDBDBD"
        android:maxLines="1"
        android:textCursorDrawable="@drawable/edit_text_cursor_drawable"
        android:textColor="#979797"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/login_om_code"
            android:layout_weight="3"
            android:hint="输入验证码"
            android:textColorHint="#BDBDBD"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/edit_text_cursor_drawable"
            android:textColor="#979797"
            android:paddingLeft="10dp"
            android:paddingBottom="20dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="获取验证码"
            android:textSize="10dp"
            android:background="@drawable/login_log_button_shape_enable"
            android:textColor="#fff"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_om_find_password"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:layout_marginRight="48dp"
        android:text="找回密码"
        />
</LinearLayout>