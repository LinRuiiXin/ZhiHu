<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/tbl_portrait"
        android:src="@drawable/default_portrait"
        app:riv_oval="true"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tbl_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/tbl_portrait"
        android:layout_alignTop="@id/tbl_portrait"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbl_profile"
        android:textSize="9dp"
        android:layout_alignBottom="@+id/tbl_portrait"
        android:layout_alignLeft="@+id/tbl_user_name"
        />
    <Button
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:id="@+id/tbl_attention"
        android:background="@drawable/add_attention_button_shape"
        android:text="关注"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="12dp"
        android:textColor="@color/ZhiHuBlue"
        android:stateListAnimator="@null"
        />
</RelativeLayout>