<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/default_item_ripple"
    android:clickable="true"
    >
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/shi_icon"
        android:background="@drawable/icon_time"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shi_text"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/shi_icon"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:text="Java"
        />
    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/shi_remove_history"
        android:background="@drawable/icon_close_activity"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#EAEAEA"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>