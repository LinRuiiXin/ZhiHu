<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_mail_line1"
        android:text="输入您的邮箱"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/register_mail_mail"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_mail_line1"
        android:layout_marginTop="50dp"
        android:maxLines="1"
        android:hint="填写正确的邮箱格式"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:textColorHint="#BDBDBD"
        />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/register_mail_line2"
        android:layout_alignLeft="@id/register_mail_mail"
        android:layout_below="@+id/register_mail_mail"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.3"
            android:id="@+id/register_mail_code"
            android:paddingLeft="10dp"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.2"
            android:id="@+id/register_mail_sendMail"
            android:background="@drawable/login_log_button_shape_enable"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textSize="10dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/register_mail_next"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_mail_line2"
        android:layout_marginTop="80dp"
        android:background="@drawable/icon_next"
        />
</RelativeLayout>