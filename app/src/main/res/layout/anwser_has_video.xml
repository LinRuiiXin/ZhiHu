<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow"
    android:elevation="2dp"
    android:padding="5dp"
    android:layout_marginBottom="8dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer_has_video_title"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_margin="7dp"
        android:maxLines="2"
        android:textColor="#000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/answer_has_video_line2"
        android:layout_below="@+id/answer_has_video_title"
        android:layout_margin="7dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/answer_has_video_portrait"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_has_video_username"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_has_video_introduction"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/answer_has_video_video"
        android:layout_margin="7dp"
        android:layout_below="@+id/answer_has_video_line2"
        android:background="@drawable/card_video_shape"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer_has_video_content"
        android:maxLines="2"
        android:layout_below="@+id/answer_has_video_video"
        android:layout_margin="7dp"
        android:textColor="#000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/answer_has_video_content"
        android:layout_margin="7dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_has_video_support"
            android:layout_gravity="center_vertical"
            android:textColor="#9e9e9e"
            android:textSize="11dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Â· "
            android:textColor="#9e9e9e"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_has_video_comments"
            android:layout_gravity="center_vertical"
            android:textColor="#9e9e9e"
            android:textSize="11dp"
            />
    </LinearLayout>
</RelativeLayout>