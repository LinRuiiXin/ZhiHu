<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ZhiHuBlue</item>
        <item name="colorPrimaryDark">@color/ZhiHuBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#BDBDBD</item>
        <!-- AppCompatEditText选择的底线颜色 -->
        <item name="colorControlActivated">@color/ZhiHuBlue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item><!--toolbar标题字体大小-->
    </style>
</resources>
